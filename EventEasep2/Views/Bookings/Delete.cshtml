@model EventEasep2.Models.Booking
@{
    ViewData["Title"] = "Delete Booking";
}

<h1>Delete Booking</h1>

<h4>Are you sure you want to delete this booking?</h4>
<hr />

<dl class="row">
    <dt class="col-sm-2">Event</dt>
    <dd class="col-sm-10">@Model.Event?.EventName</dd>

    <dt class="col-sm-2">Venue</dt>
    <dd class="col-sm-10">@Model.Venue?.VenueName</dd>

    <dt class="col-sm-2">Booking Date</dt>
    <dd class="col-sm-10">@Model.BookingDate.ToString("MMMM dd, yyyy")</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="BookingId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
