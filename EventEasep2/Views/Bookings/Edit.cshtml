@model EventEasep2.Models.Booking

@{
    ViewData["Title"] = "Edit Booking";
}

<h1>Edit Booking</h1>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <strong>There were errors in your form submission:</strong>
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="BookingDate" class="control-label"></label>
        <input asp-for="BookingDate" type="datetime-local" class="form-control" />
        <span asp-validation-for="BookingDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EventId">Event</label>
        <select asp-for="EventId" class="form-control" asp-items="ViewBag.EventId"></select>
        <span asp-validation-for="EventId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="VenueId">Venue</label>
        <select asp-for="VenueId" class="form-control" asp-items="ViewBag.VenueId"></select>
        <span asp-validation-for="VenueId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>